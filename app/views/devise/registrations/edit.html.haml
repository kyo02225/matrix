.devise__form__main
  %ul.devise__form__main__ul
    %h2.log__in__text 
      編集
      = link_to :back do
        %button.log__in__text__back 戻る
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource
      %li.devise__form__main__ul__li
        = f.label :名前
        %br/
        = f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "devise__form__main__ul__li--text"
      %li.devise__form__main__ul__li
        = f.label :メールアドレス
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        -# %div
        -#   Currently waiting confirmation for: #{resource.unconfirmed_email}
      %li.devise__form__main__ul__li
        = f.label :旧パスワード
        -# %i (leave blank if you don't want to change it)
        %br/
        = f.password_field :password, autocomplete: "new-password"
        - if @minimum_password_length
          %br/
          %em
            ※6文字以上
      -# %li.devise__form__main__ul__li
      -#   = f.label :password_confirmation
      -#   %br/
      -#   = f.password_field :password_confirmation, autocomplete: "new-password"
      %li.devise__form__main__ul__li
        = f.label :新パスワード
        -# %i (we need your current password to confirm your changes)
        %br/
        = f.password_field :current_password, autocomplete: "current-password"
        %br/
        %em
          ※6文字以上
      %li.devise__form__main__ul__li__btn
        = f.submit "更新する"
